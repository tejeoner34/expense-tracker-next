generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  expenses Expense[]
  currency String    @default("JPY")
}

model Expense {
  id       String   @id @default(uuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  category String
  amount   Float
  currency String
  date     DateTime @default(now())
}
